<section class="dash-main m-3">
    <div class="d-flex flex-row justify-content-between">
        <h1 class="title">Welcome Back!</h1>
        <button class="btn btn-info"><a class="nav-link active text-white" aria-current="page" href="/dashboard/add-post">Write a New Post</a></button>
    </div>
    <div class="mt-3">
        {{#if posts.length}}
        <div>
            <h2 class="your-reviews">Your Blog Posts</h2>
        </div>
        <div class="d-flex flex-row justify-content-evenly">
            {{#each posts as |post|}}
            <div>
                {{> post-info post}}
            </div>
            {{/each}}
        </div>
        {{else}}
        <div>
            <h2>You don't have any posts yet.</h2>
        </div>
        {{/if}}
    </div>
</section>